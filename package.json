{
  "name": "erslice",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "ErSlice - ErAI 家族的前端開發工具與組件庫系統，提供智能組件設計與開發流程管理",
  "author": "ErAI <erai@erai.com>",
  "license": "MIT",
  "homepage": "https://github.com/erich/ErSlice",
  "repository": {
    "type": "git",
    "url": "https://github.com/erich/ErSlice.git"
  },
  "keywords": [
    "frontend-tools",
    "component-library",
    "design-system",
    "ai-powered",
    "tauri",
    "react",
    "typescript"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "build:all": "npm run build && npm run tauri:build",
    "release": "npm run lint && npm run type-check && npm run build:all",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:tauri": "cd src-tauri && cargo test",
    "test:all": "npm run test && npm run test:tauri",
    "clean": "rm -rf dist src-tauri/target",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "component:generate": "node scripts/generate-component.js",
    "design:analyze": "node scripts/analyze-design.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-context-menu": "^2.2.4",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-toast": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.1.7",
    "@tauri-apps/api": "^2.1.0",
    "@tauri-apps/plugin-dialog": "^2.1.0",
    "@tauri-apps/plugin-fs": "^2.1.0",
    "@tauri-apps/plugin-notification": "^2.1.0",
    "@tauri-apps/plugin-shell": "^2.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.0",
    "react-virtualized-auto-sizer": "^1.0.24",
    "react-window": "^1.8.10",
    "tailwind-merge": "^2.5.5",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.17",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/react-vite": "^7.6.17",
    "@storybook/testing-library": "^0.2.2",
    "@tauri-apps/cli": "^2.7.1",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "jsdom": "^24.1.0",
    "postcss": "^8.5.2",
    "storybook": "^7.6.17",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.7.3",
    "vite": "^5.4.2",
    "vitest": "^1.6.0"
  }
}
